extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Hey, Potential Employers! Let's make the web great together!
      p.lead.text-light
        | Hi my name is Jan Xavier. I'm an aspiring full stack web developer and a lifelong learner. This is my portfolio where I can show off a few of the applications/projects I have built.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/projects/${project.id}`)
            img.thumbnail(src=`${project.thumbnail}`)
            h5= project.project_name

